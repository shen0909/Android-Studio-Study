<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- 相对于父容器 -->
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:text="1.默认位置"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/design_default_color_secondary"
        android:text="2.相对于父容器在右边"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="#00ff00"
        android:text="3.在父容器的正中间"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00ff00"
        android:text="4.在父容器的底部（默认在左边）"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/fivettt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#00ffff"
        android:text="5.在父容器的底部右边"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sixttt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00ffff"
        android:text="6.水平居中"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#00ffff"
        android:text="7.垂直居中"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/eighttext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffff"
        android:text="8.垂直+水平居中 = 中心居中"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <!-- 相对于其他控件 -->
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/eighttext"
        android:layout_below="@+id/sixttt"
        android:background="@color/black"
        android:text="在8的左边和6的下面"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fivettt"
        android:layout_above="@+id/fivettt"
        android:background="@color/black"
        android:text="在5的左上面"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>