<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/phoneTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="电话:"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="123456"
        android:textColor="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/phoneTip"
        app:layout_constraintStart_toEndOf="@+id/phoneTip"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="name:"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@+id/phone" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ybr"
        android:textColor="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/nameTip"
        app:layout_constraintStart_toEndOf="@+id/nameTip" />

    <TextView
        android:id="@+id/passWordTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="passWord:"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/name" />

    <TextView
        android:id="@+id/passWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="12334"
        android:textColor="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/passWordTip"
        app:layout_constraintStart_toEndOf="@+id/passWordTip" />

</androidx.constraintlayout.widget.ConstraintLayout>